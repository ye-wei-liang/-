swiper {
  height: 350rpx;
}
swiper image {
  width: 100%;
  height: 100%;
}
.locationbutton {
  margin-top: 100rpx;
  width: 650rpx;
  height: 220rpx;
  color: rgb(56, 194, 248);
  line-height: 220rpx;
  text-align: center;
  background-color: rgb(45, 253, 114);
}
.btn {
  position: relative;
  display: inline-block;
  width: 650rpx;
  height: 220rpx;
  margin: 20px 20px 20px 23px;
  padding: 1em 2em;
  background: transparent;
  border: 2px;
  border-radius: 3px;
  font-weight: 400;
  line-height: 220rpx;
  text-align: center;
  box-shadow: 0px 2px 4px #67c0f0,0px 1px 2px #bf2fcb;
}
 
 
.btn text {
  position: absolute;
  left: 120px;
  top:5px;
  font-size: 22px;
  font-family:'Times New Roman', 微软正黑体  ;
  background: -webkit-linear-gradient(left, #67c0f0, #bf2fcb);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
