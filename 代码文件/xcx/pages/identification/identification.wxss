page {
  background-image: url('https://wimg.588ku.com/gif620/21/04/22/251887404cdfd5f45778c4a617634957.gif');
  background-position: center;
  background-size: 1500rpx;
}
.hd_scan {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle; 
  justify-content: space-between; 
  padding:0;
  margin: 0;
  box-sizing: border-box;
} 
.box {
  background:rgba(0,0,0,0);
}
.confirm {
    margin-top: 20rpx;
    width: 650rpx;
    color: #6ec5ff;
    background-image: linear-gradient(to right, #a0f7af 0%, #bfe9ff  51%, #6effcf  100%);
    transition: 0.5s;
    box-shadow: 0 0 20px rgb(236, 217, 248);

}
.confirm:hover {
  background-position: right center; /* change the direction of the change here */
  color: rgb(204, 111, 241);
  text-decoration: none;
}
@keyframes myfirst {
from {
  height:0rpx;
}
to {
  height:210rpx;
}
}
.list-msg {
  display: flex;
  justify-content: space-around;
  border: 1px solid #333;
 
}
.list-msg1 {
  color: aqua;
 font-size: large;
}
.list-msg2 {
  color: aqua;
  font-size: large;
}
.select_box {
  position: fixed;
  top: 50rpx;
  left: 520rpx;
  width: 100rpx;
  background-color: transparent;
  z-index: 10000;
}
.preview {
  background-image: linear-gradient(to right, #f3fd93 0%, #ebbfff  51%, #6effcf  100%);
}