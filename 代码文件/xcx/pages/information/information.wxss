/* pages/information/information.wxss */
page {
  height: 100%;
  background-image: url('https://wimg.588ku.com/gif620/20/06/09/86cc5a83ffaec809a5a8b6ec5cd66566.gif');
  background-position: center;

}
.my-userinfo-container {
  height: 100%;
  background-color: #f4f4f4;
}
.top-box {
  position: relative;
  display: flex;
  height: 400rpx;
  justify-content: center;
  align-items: center;
  background: linear-gradient(to right, #daeaf0, #c3f1f3);





  flex-direction: column;
}
.gif-wave {
  position: absolute;
  width: 100%;
  height: 100rpx;
  bottom: -9rpx;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;

}
.avatar {
  width: 190rpx;
  height: 190rpx;
  border-radius: 145rpx;
  border: 2rpx solid #FFF;
  box-shadow: 0 2rpx 6rpx black;
}
.nickname {
  font-size: 46rpx;
  color: #FFF;
  font-weight: bold;
  margin-top: 5rpx;
}
form {
  display: block;
  /* width: 600rpx; */
  /* height: 700rpx; */
}
.list {
  background-image: url('https://wimg.588ku.com/gif620/20/06/09/86cc5a83ffaec809a5a8b6ec5cd66566.gif');
  background-position: center;
  background-size: 400px 450px;
}
.panel-list {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  position: relative;
  margin: 0 70rpx;
  top: 20rpx;
  width: 600rpx;
  height: 700rpx;
  background-color: transparent;
  border: 2px solid #FFF;
  border-radius: 50rpx;
  box-shadow: 6rpx 6rpx 6rpx 6rpx rgb(174, 226, 247);
}

.panel-list view {
  display: flex;
  /* height: 110rpx; */
  border-bottom: 1rpx dotted #333
}
.number {
  margin-top: 10rpx;
}
.submit {
  width: 650rpx;
  color: #6ec5ff;
  margin-top: 50rpx;
  background-image: linear-gradient(to right, #a0f7af 0%, #bfe9ff  51%, #6effcf  100%);
  transition: 0.5s;
  box-shadow: 0 0 20px rgb(236, 217, 248);
}
.submit:hover {
  background-position: right center; /* change the direction of the change here */
  color: rgb(204, 111, 241);
  text-decoration: none;
}
.exit {
  margin-top: 20rpx;
  width: 650rpx;
  color: #6ec5ff;
  background-image: linear-gradient(to right, #a0f7af 0%, #bfe9ff  51%, #6effcf  100%);
  transition: 0.5s;
  box-shadow: 0 0 20px rgb(236, 217, 248);
}
.exit:hover {
  background-position: right center; /* change the direction of the change here */
  color: rgb(204, 111, 241);
  text-decoration: none;
}
.box1,.box2,.box3 {
  position: relative;
}
.screenImage {
  position: absolute;
  right:0px;
  top:-20px;
}